{
  "compilerOptions": {
    "target": "esnext",
    "module": "umd",
    "emitDeclarationOnly": true,
    "declaration": true,
    "outDir": "./lib",
    "allowJs": true,
    "esModuleInterop": true,
    "moduleResolution": "node",
    "strict": true,
    "baseUrl": ".",
    "noUnusedLocals": true,
    "paths": {
      "src/*": ["src/*"]
    }
  },
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules/**/*",
    "**/__tests__/*",
    "**/*.test.ts",
    "**/*.spec.ts"
  ]
}